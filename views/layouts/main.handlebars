<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enviro Hub</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
<div class="flex-column justify-space-around">
    <header class="header">
        <div>
        <a href="/"><img src="/images/logo.png" width=200px></a>
      <nav>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <a href="/profile">profile</a> |
        <button class="no-button" id="logout">logout</button>
        {{else}}
        <a href="/login">login</a>
        {{/if}}
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    <footer>
      
      <div> <span id="display-facts"></span></div>
    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{!-- {{#if logged_in}} --}}
  <script src="/js/logout.js"></script>
  <script src="/js/facts.js"></script>
  {{!-- {{/if}} --}}
</body>    
</html>