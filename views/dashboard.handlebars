<div>
    <div class="dashboard-header">
        <h1>Welcome {{user.level}}, {{user.first_name}}</h1>
    </div>

    {{!--
    <!-- Loop over each object in the projects array --> --}}
    {{#each goals as |goal| }}
    <div class="your-goals">
        <div class="the-goals" id="goal">
            <h2>
                {{!-- will need help here with doing the image but I think we need to use the below code--}}
                <!-- Call helper function with triple brackets to render the seed/ span as HTML -->
                <a href="/project/{{project.id}}">{{project.name}}</a>
            </h2>
            {{!-- this is where the the seed/plant image will go <img src=> --}}
            <h3>{{goal}}</h3>

            <div class="container">
                <div class="goal-section">
                    <div class="goal">
                        <p><b>Your Goal:</b><span class="goal-name"></span>
                        <div class="btn-wrap">
                            <button class="btn" id="add" type="button">&checkmark;</button>
                        </div>
                    </div>
                    <div class="status-info">
                        <div class="bar-wrap">
                            <div class="bar"> <span class="percentage"></span></div>
                        </div>
                        <p class="line">Number of Days Completed: <span class="number" id="num2">0</span> /<span
                                class="number" id="num1"></span> </p>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}